<!DOCTYPE html>
<html>
  <head>
    <title>Kiraibar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%#<%= favicon_link_tag('favicon.ico') %>
    <%# <meta name="viewport" content="width=device-width"> %>
    <%= javascript_include_tag 'kirai/snow.js' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
  </head>

  <body>
  <header class='top-header'>
   <div class='row'>
    <ul class='navbar' >
    <a href="http://localhost:3000/posts"><%= image_tag "logo.png", alt: "icon", id: "assets", class: "image", width: "60px" %></a>
     <li class="col-sm-2"> <%= form_with url: posts_path, method: :get, local: true do |form| %>
     <%= form.select("label_id", Label.pluck(:genre, :id), { include_blank: true }) %> 
     <%= form.submit 'ジャンル別検索', name: nil %></li>
     <% end %>
     </li>
       
       <%= link_to "トップページ",top_path %></li>
       <%= link_to "好奇心" , vote_path %></li>
   <% if user_signed_in? %>
      <li><%= link_to "ブログ投稿", new_post_path %></li>
      <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        <% if current_user.try(:admin?) %>
        <%= link_to '管理画面', rails_admin_path  %>
        <% else %>
        <li><%= link_to 'ゲスト管理者ログイン（閲覧用）', guests_admin_guest_sign_in_path, method: :post %></li>
        <% end %>
    <% else %>
    <li><%= link_to "新規登録", new_user_registration_path %></li>
    <li> <%= link_to "ログイン", new_user_session_path %></li>
    <li><%= link_to 'ゲストログイン（閲覧用）', guests_guest_sign_in_path, method: :post %></li>
    <% end %>
    <li><a href=<%= notifications_path %>><%= content_tag(:i, "", class: " far fa-bell fa-lg",style: "font-size: 1.6em;") %></a></li>
    <li>
    <% if params[:local] == 'en' || params[:locale].blank? %>
     <%=link_to "日本語", '/ja', class: 'nav-link link-btn d-flex' %> 
    <% elsif params[:locale] == 'ja'%> 
    <%= link_to 'change into English', '/en',class: 'nav-link link-btn d-flex' %> 
    <% elsif params[:locale] == 'zh_CN' %> 
    <%= link_to '中文','/ja',class: 'nav-link link-btn d-flex'%> 
     <% end %> 
    </li>
    </ul>
  </div>
  </header>
  <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <div class="main" >
      <%= yield %>
     
    </div>
    
      <%# <footer  class='footer'>
       <p>◎2022 KIRAIBAR Copyright </p>
      </footer> %>
    
  </body>
</html>
