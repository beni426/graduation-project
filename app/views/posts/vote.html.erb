<%# <% @posts.labels.each do |label| %> 
<%# <% if labels.genre == 'life' %> 
<div class='label-title'>
<p>生活部門</p>
</div>
<div class="posts-form-vote">
  <ul class="post-list">
    <% @posts.each do |post| %>
     <li class="post-list-item-vote">
       <div class='post_block_top'>
         <%= post.id %>
        <% if post.image.url.present? %>
        <%= image_tag post.image.url if post.image && post.image.url %> <p><%= post.description %></p>
        <% else %>
        <%= image_tag 'sea.jpg',:size =>'100x150' %><p><%= post.description %></p>
        <% end %>
        </div>
        <div class='post_block_bottom'>
           <%= post.title %>
        </div>
       
       </li>
       <div class="post_item-description">

      </div>
    <% end %> 
    <%# <% end %> 
  </ul>
</div>

<%# <% if @posts.label.genre == money %> 
