
<div class='post-form'>
<%= form_with(model: @post, local: true) do |form| %>
 <%= form.hidden_field :label %>
<p>
<p>
  <div class='show_head'>
   <%= @post.user.name %>
  </div>
</p>
<p>
  <%= @post.title %>
</p>
 <p>
   <%= @post.description %>
</p>
  <%= form.hidden_field :image_cache %>
    <% if @post.image.url.present? %>
    <%= image_tag @post.image.url,size: "250x200"%>
    <% else %>
    <%= image_tag 'sea.jpg',:size =>'250x200' %>
   <% end %>
  </p>

<p>
  <strong>Genre:</strong>
    <% @post.labels.each do |label| %>
       <%= label.genre %>
   <%end%>
 </p>
 <% end %>
 <% if user_signed_in? %>
 <% unless @post.user_id == current_user.id %>
  <% if @stock.present? %>
    <%= link_to 'ストックを解除する', stock_path(id: @stock.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'ストックする', stocks_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<% if current_user.id == @post.user_id %>
<%= link_to 'Edit', edit_post_path(@post) %> 
<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', posts_path %>

  <% if @post.user_id != current_user.id %>
    <li>
      <div class="item">
        <%= link_to @post.user.name, user_path %>
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, receiver_id: @post.user_id), method: :post %>
      </div>
    </li>
<% end %>

</div>
<div class='post-form'>
<div id="comments_area">
   <%= render partial: 'comments/index',locals: {comments: @comments,post: @post} %>
</div>
 <% end %>
    <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>

</div>
